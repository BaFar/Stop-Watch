<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2c846b"
    tools:context="com.example.dell.stopwatch.MainActivity">


    <TextView
        android:id="@+id/stopWatchTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="00:00:00"
        android:textColor="#fff"
        android:gravity="center"/>
    <TextView
        android:id="@+id/stopwatchFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="min:sec:milisec"
        android:textColor="#fff"
        android:gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/startBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Start"
            android:textSize="30sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:background="@color/colorBtn"
            android:onClick="startStopWatch"/>
        <Button
            android:id="@+id/pauseBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pause"
            android:textSize="30sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:background="@color/colorBtn"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="pauseStopWatch"/>
        <Button
            android:id="@+id/stopBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="stop"
            android:textSize="30sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:background="@color/colorBtn"
            android:onClick="stopStopWatch"/>
    </LinearLayout>





</LinearLayout>
